<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.machinelearningforsmallbusiness.seemycode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.machinelearningforsmallbusiness.seemycode.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.machinelearningfrosmallbusiness.com/seemycode” -->
                <data android:scheme="http"
                    android:host="www.machinelearningforsmallbusiness.com"
                    android:pathPrefix="/seemycode" />
            </intent-filter>

        </activity>

        <activity android:name="com.machinelearningforsmallbusiness.seemycode.DisplayCodeActivity">
        </activity>

    </application>

</manifest>